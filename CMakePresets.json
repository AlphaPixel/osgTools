{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "hidden": true,
      "name": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_MODULE_PATH": "${sourceDir}/cmake",
        "ENABLE_METRICS": "ON"
      },
      "vendor": {
        "example.com/ExampleIDE/1.0": {
          "autoFormat": true
        }
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "binaryDir": "build/debug/",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "install/debug",
        "CMAKE_PREFIX_PATH": "install/debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "install/release",
        "CMAKE_PREFIX_PATH": "install/release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "debug"
    }
  ]
}
